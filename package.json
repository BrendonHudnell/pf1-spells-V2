{
  "name": "pf1-spells-v2",
  "version": "1.0.0",
  "description": "full stack typescript react/express boilerplate",
  "repository": "https://github.com/BrendonHudnell/pf1-spells-v2",
  "author": "Brendon Hudnell",
  "license": "MIT",
  "engines": {
    "node": "12.x",
    "yarn": "1.x"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "ajv": "^7.1.0",
    "ajv-formats": "^1.5.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "html-react-parser": "^1.2.4",
    "ky": "^0.26.0",
    "mysql2": "^2.2.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-hook-form": "^6.15.1",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.1.0",
    "typeorm": "^0.2.31"
  },
  "devDependencies": {
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.0.1",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "extract-css-chunks-webpack-plugin": "^4.9.0",
    "html-webpack-plugin": "^5.0.0-beta.6",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "postcss": "^8.2.5",
    "postcss-loader": "^5.0.0",
    "prettier": "^2.2.1",
    "sass": "^1.32.6",
    "sass-loader": "^11.0.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.3",
    "ts-loader": "^8.0.14",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^3.11.2"
  },
  "scripts": {
    "build": "yarn build:client && yarn build:server",
    "build:client": "cd ./client && webpack --mode production --config webpack.prod.js",
    "build:server": "tsc",
    "start": "node server/build/server.js",
    "dev:client": "cd ./client && webpack serve --open --config webpack.dev.js",
    "dev:server": "ts-node-dev --respawn --transpile-only server/src/server.ts",
    "lint": "eslint . --ext .js,.ts,.tsx --quiet --fix",
    "test": "yarn test:server",
    "test:server": "jest",
    "cover": "yarn cover:server",
    "cover:server": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn cover"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "yarn lint"
  }
}
